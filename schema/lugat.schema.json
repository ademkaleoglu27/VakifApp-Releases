{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://nurmektebi.app/schema/lugat.schema.json",
    "title": "Lugat Dictionary",
    "description": "Ottoman/Arabic dictionary entries",
    "type": "object",
    "required": [
        "schemaVersion",
        "lang",
        "entries"
    ],
    "additionalProperties": false,
    "properties": {
        "schemaVersion": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "lang": {
            "type": "string",
            "enum": [
                "tr",
                "ar",
                "en"
            ],
            "description": "Primary language of meanings"
        },
        "entries": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "key",
                    "forms",
                    "meaning"
                ],
                "additionalProperties": false,
                "properties": {
                    "key": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Normalized lookup key"
                    },
                    "forms": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "string"
                        },
                        "description": "Alternative spellings/forms"
                    },
                    "meaning": {
                        "type": "string",
                        "minLength": 1
                    },
                    "sources": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Books where this term appears"
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Grammatical or semantic tags"
                    }
                }
            }
        }
    }
}