{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://nurmektebi.app/schema/manifest.schema.json",
    "title": "Corpus Manifest",
    "description": "Root manifest defining the corpus and its books",
    "type": "object",
    "required": [
        "schemaVersion",
        "corpusId",
        "build",
        "books"
    ],
    "additionalProperties": false,
    "properties": {
        "schemaVersion": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$",
            "description": "Semantic version of the schema"
        },
        "corpusId": {
            "type": "string",
            "minLength": 1,
            "description": "Unique identifier for the corpus"
        },
        "build": {
            "type": "object",
            "required": [
                "gitCommit",
                "builtAt"
            ],
            "additionalProperties": false,
            "properties": {
                "gitCommit": {
                    "type": "string",
                    "description": "Git commit hash at build time"
                },
                "builtAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "ISO 8601 timestamp of build"
                }
            }
        },
        "books": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "bookId",
                    "title",
                    "order",
                    "path"
                ],
                "additionalProperties": false,
                "properties": {
                    "bookId": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Unique book identifier"
                    },
                    "title": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Display title of the book"
                    },
                    "order": {
                        "type": "integer",
                        "minimum": 1,
                        "description": "Sort order in the library"
                    },
                    "path": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Relative path to book directory"
                    }
                }
            }
        }
    }
}