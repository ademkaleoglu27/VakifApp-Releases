{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://nurmektebi.app/schema/book.schema.json",
    "title": "Book Metadata",
    "description": "Metadata for a single book in the corpus",
    "type": "object",
    "required": [
        "schemaVersion",
        "bookId",
        "title",
        "lang",
        "sectionsFile",
        "pagesDir",
        "pageCount"
    ],
    "additionalProperties": false,
    "properties": {
        "schemaVersion": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "bookId": {
            "type": "string",
            "minLength": 1
        },
        "title": {
            "type": "string",
            "minLength": 1
        },
        "lang": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string",
                "enum": [
                    "tr",
                    "ar",
                    "en",
                    "de",
                    "fr"
                ]
            }
        },
        "sectionsFile": {
            "type": "string",
            "minLength": 1,
            "description": "Filename of sections.json"
        },
        "pagesDir": {
            "type": "string",
            "minLength": 1,
            "description": "Directory name containing page files"
        },
        "pageCount": {
            "type": "integer",
            "minimum": 1
        },
        "defaultReaderProfile": {
            "type": "string",
            "description": "Default reader profile/theme"
        }
    }
}