    "header": {
        "title": "Mu’cizat-ı Kur’aniye Risalesi",
        "sticky": true
    },
    "segments": [
        {
            "segmentId": "sozler-0407-001",
            "type": "paragraph",
            "text": "Elcevap: On Dokuzuncu Söz’de beyan edildiği ve sair Sözlerde ispat edildiği gibi:",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0407-002",
            "type": "paragraph",
            "text": "KUR’AN",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0407-003",
            "type": "paragraph",
            "text": "Şu kitab-ı kebir-i kâinatın bir tercüme-i ezeliyesi.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0407-004",
            "type": "paragraph",
            "text": "Ve âyât-ı tekviniyeyi okuyan mütenevvi dillerinin tercüman-ı ebedîsi.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0407-005",
            "type": "paragraph",
            "text": "Ve şu âlem-i gayb ve şehadet kitabının müfessiri.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0407-006",
            "type": "paragraph",
            "text": "Ve zeminde ve gökte gizli esma-i İlahiyenin manevî hazinelerinin keşşafı.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0407-007",
            "type": "paragraph",
            "text": "Ve sutûr-u hâdisatın altında muzmer hakaikin miftahı.",
            "lang": "tr"
        }
    ]
}