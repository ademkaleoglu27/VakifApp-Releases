    "sectionId": "sozler-section-103",
    "header": {
        "title": "Birinci Mevkıf’ın Küçük Bir Zeyli",
        "sticky": true
    },
    "segments": [
        {
            "segmentId": "sozler-0651-001",
            "type": "paragraph",
            "text": "Birer bürhan-ı nur-efşanız vücub-u Sâni’e hem vahdete hem kudrete şahitleriz biz.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0651-002",
            "type": "paragraph",
            "text": "Şu zeminin yüzünü yaldızlayan nâzenin mu’cizatı çün melek seyranına",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0651-003",
            "type": "paragraph",
            "text": "Bu semanın arza bakan, cennete dikkat eden, binler müdakkik gözleriz biz.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0651-004",
            "type": "paragraph",
            "text": "Tûba-yı hilkatten semavat şıkkına, hep Kehkeşan ağsanına",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0651-005",
            "type": "paragraph",
            "text": "Bir Cemil-i Zülcelal’in dest-i hikmetiyle takılmış, binler güzel meyveleriz biz.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0651-006",
            "type": "paragraph",
            "text": "Şu semavat ehline birer mescid-i seyyar, birer hane-i devvar, birer ulvi âşiyane",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0651-007",
            "type": "paragraph",
            "text": "Birer misbah-ı nevvar, birer gemi-i cebbar, birer tayyareyiz biz.",
            "lang": "tr"
        }
    ]
}