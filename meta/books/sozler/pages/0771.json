    "header": {
        "title": "Vicdan, cezbesi ile Allah’ı tanır",
        "sticky": true
    },
    "segments": [
        {
            "segmentId": "sozler-0771-header",
            "type": "heading",
            "text": "Vicdan, cezbesi ile Allah’ı tanır",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0771-001",
            "type": "paragraph",
            "text": "Vicdanda mündemicdir, bir incizab ve cezbe. Bir cazibin cezbiyle daim olur incizab.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0771-002",
            "type": "paragraph",
            "text": "Cezbe düşer zîşuur, ger Zülcemal görünse. Etse tecelli daim pür-şaşaa bîhicab.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0771-003",
            "type": "paragraph",
            "text": "Bir Vâcibü’l-vücud’a, Sahib-i Celal ve Cemal; şu fıtrat-ı zîşuur kat’î şehadet-meab.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0771-004",
            "type": "paragraph",
            "text": "Bir şahidi o cezbe hem diğeri incizab.",
            "lang": "tr"
        }
    ]
}