    "segments": [
        {
            "segmentId": "sozler-0487-001",
            "type": "paragraph",
            "text": "ifade ettiği hakikat-i azîme ile",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0487-002",
            "type": "paragraph",
            "text": "وَهُوَ مَعَكُمْ اَيْنَ مَا كُنْتُمْ",
            "lang": "ar"
        },
        {
            "segmentId": "sozler-0487-003",
            "type": "paragraph",
            "text": "ifade ettiği hakikat-i rakibaneyi",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0487-004",
            "type": "paragraph",
            "text": "هُوَ الْاَوَّلُ وَالْاٰخِرُ وَالظَّاهِرُ وَالْبَاطِنُ وَهُوَ بِكُلِّ شَىْءٍ عَلٖيمٌ",
            "lang": "ar"
        },
        {
            "segmentId": "sozler-0487-005",
            "type": "paragraph",
            "text": "ifade ettiği hakikat-i muhita gibi",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0487-006",
            "type": "paragraph",
            "text": "وَلَقَدْ خَلَقْنَا الْاِنْسَانَ وَنَعْلَمُ مَا تُوَسْوِسُ بِهٖ نَفْسُهُ وَ نَحْنُ اَقْرَبُ اِلَيْهِ مِنْ حَبْلِ الْوَرٖيدِ",
            "lang": "ar"
        },
        {
            "segmentId": "sozler-0487-007",
            "type": "paragraph",
            "text": "ifade ettiği akrebiyeti",
            "lang": "tr"
        }
    ]
}