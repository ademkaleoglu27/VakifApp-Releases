    "header": {
        "title": "Bazen hayır, şerre vasıta olur",
        "sticky": true
    },
    "segments": [
        {
            "segmentId": "sozler-0797-header",
            "type": "heading",
            "text": "Bazen hayır, şerre vasıta olur",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0797-001",
            "type": "paragraph",
            "text": "Havastaki meziyet filhakika sebeptir tevazu, mahviyete. Olmuş maatteessüf sebep tahakküme,",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0797-002",
            "type": "paragraph",
            "text": "Tekebbüre hem illet. Fakirlerdeki aczi, âmîlerdeki fakrı filhakika sebeptir ihsan ve merhamete.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0797-003",
            "type": "paragraph",
            "text": "Lâkin maatteessüf müncer olmuştur şimdi, zillet ve esarete. Bir şeyde hasıl olan mehasin ve şerefse",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0797-004",
            "type": "paragraph",
            "text": "Havas ve rüesaya o şey peşkeş edilir. O şeyden neş’et eden seyyiat ve şer ise efrad ve hem avama",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0797-005",
            "type": "paragraph",
            "text": "Taksim, tevzi edilir. Aşiret-i galipte hasıl olan şerefse: “Hasan Ağa, âferin!” Hasıl olan şer ise",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0797-006",
            "type": "paragraph",
            "text": "Efrada olur nefrin. Beşerde şerr-i hazîn!",
            "lang": "tr"
        }
    ]
}