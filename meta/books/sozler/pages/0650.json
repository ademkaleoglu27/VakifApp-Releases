    "sectionId": "sozler-section-103",
    "header": {
        "title": "Birinci Mevkıf’ın Küçük Bir Zeyli",
        "sticky": true
    },
    "segments": [
        {
            "segmentId": "sozler-0650-001",
            "type": "paragraph",
            "text": "Sanki âyâtın Hudâ, nur ile tahrir eylemiş.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0650-002",
            "type": "paragraph",
            "text": "Bak, ne mu’ciz-i hikmet, iz’anrubâ-yı kâinat",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0650-003",
            "type": "paragraph",
            "text": "Bak, ne âlî bir temaşadır feza-yı kâinat",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0650-004",
            "type": "paragraph",
            "text": "Dinle de yıldızları, şu hutbe-i şirinine",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0650-005",
            "type": "paragraph",
            "text": "Name-i nurîn-i hikmet, bak ne takrir eylemiş.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0650-006",
            "type": "paragraph",
            "text": "Hep beraber nutka gelmiş, hak lisanıyla derler:",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0650-007",
            "type": "paragraph",
            "text": "Bir Kadîr-i Zülcelal’in haşmet-i sultanına",
            "lang": "tr"
        }
    ]
}