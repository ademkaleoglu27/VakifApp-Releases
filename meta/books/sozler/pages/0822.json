    "segments": [
        {
            "segmentId": "sozler-0822-header",
            "type": "heading",
            "text": "Şöhret zalimedir",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0822-001",
            "type": "paragraph",
            "text": "Şöhret bir müstebittir, sahibine mal eder başkasının malını. Meşhur Hoca Nasreddin letaifi içinde, zekâtı –yani, onda biri onundur– asıl malı…",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0822-002",
            "type": "paragraph",
            "text": "Rüstem-i Sistanî onun hayal-i şanı garet etti bir asır mefahir-i İran’ı. Gasb ve garetle şişti o namdar hayali.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0822-003",
            "type": "paragraph",
            "text": "Hurafata karıştı, attı nev-i insanı.",
            "lang": "tr"
        }
    ]
}