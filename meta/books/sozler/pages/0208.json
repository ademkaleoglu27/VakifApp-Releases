    "bookId": "sozler",
    "pageId": "sozler-0208",
    "pageIndex": 208,
    "sectionId": "sozler-section-043",
    "header": {
        "title": "On Yedinci Söz’ün İkinci Makamı",
        "sticky": true
    },
    "segments": [
        {
            "segmentId": "sozler-0208-001",
            "type": "paragraph",
            "text": "Tevekkül ile bela yüzünde gül, tâ o da gülsün.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0208-002",
            "type": "paragraph",
            "text": "O güldükçe küçülür, eder tebeddül.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0208-003",
            "type": "paragraph",
            "text": "Bil ey hodgâm! Bu dünyada saadet, terk-i dünyada.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0208-004",
            "type": "paragraph",
            "text": "Hudâbin isen o kâfidir, bıraksan da bütün eşya lehinde",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0208-005",
            "type": "paragraph",
            "text": "Ger hodbin isen helâkettir, ne yaparsan bütün eşya aleyhinde.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0208-006",
            "type": "paragraph",
            "text": "Demek, terki gerektir her iki halde bu dünyada.",
            "lang": "tr"
        },
        {
            "segmentId": "sozler-0208-007",
            "type": "paragraph",
            "text": "Terki demek: Hudâ mülkü, onun izni, onun namıyla bakmakta.",
            "lang": "tr"
        }
    ]
}